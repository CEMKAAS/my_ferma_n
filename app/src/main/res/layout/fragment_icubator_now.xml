<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:columnCount="3">

        <TextView
            android:id="@+id/name"
            style="@style/TextAppearance.MyApp.DisplaySmall3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Инкубатор 3" />


        <TextView
            android:id="@+id/data_now"
            style="@style/TextAppearance.MyApp.DisplaySmall3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Идет день 1" />


        <TextView
            android:id="@+id/temp_now"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Температура должна быть 38 г" />

        <TextView
            android:id="@+id/damp_now"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Влажность должна быть 50 %" />


        <TextView
            android:id="@+id/overturn_now"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Переворачивать нужно 5-6 раз" />

        <TextView
            android:id="@+id/airing_now"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Провертивать нужно 10 минут" />


        <TextView
            android:id="@+id/ovoskop_now"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:text="Овоскопирование" />

        <Button
            android:id="@+id/addChart_button"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:onClick="onClickAddChart"
            android:text="Изменить"
            app:icon="@drawable/baseline_edit_24" />


        <Button
            android:id="@+id/add_button"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_gravity="left"

            android:layout_marginTop="5dp"
            android:onClick="onClickAdd"
            android:text="Фото"
            app:icon="@drawable/baseline_egg_24" />

        <TextView
            android:id="@+id/tomorrow"
            style="@style/TextAppearance.MyApp.DisplaySmall3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Завтра" />


        <TextView
            android:id="@+id/temp_tomorrow"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Температура должна быть 38 г" />

        <TextView
            android:id="@+id/damp_tomorrow"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="11"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Влажность должна быть 50 %" />


        <TextView
            android:id="@+id/overturn_tomorrow"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="12"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Переворачивать нужно 5-6 раз" />

        <TextView
            android:id="@+id/airing_tomorrow"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="13"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Провертивать нужно 10 минут " />


        <TextView
            android:id="@+id/ovoskop_tomorrow"
            style="@style/TextAppearance.MyApp.DisplaySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="14"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:text="Овоскопирование" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_row="15"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:hint="Количество"
            app:endIconDrawable="@drawable/baseline_east_24"
            app:endIconMode="custom"
            app:errorEnabled="true"
            app:helperText="Укажите кол-во птенцов"
            app:helperTextEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionGo"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/dayDamp1"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="16"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:onClick="onClickAddChart"
            android:text="Настройки"
            app:icon="@drawable/baseline_edit_note_24" />
        />

        <Button
            android:id="@+id/end"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="16"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:onClick="onClickAdd"
            android:text="Завершить"

            />

    </GridLayout>
</ScrollView>